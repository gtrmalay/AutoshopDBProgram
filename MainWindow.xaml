<Window x:Class="AutoshopDBProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoshopDBProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="fon.jpg"/>
    </Window.Background>
    <StackPanel>
        <Label Foreground="White" Background="Black">Выберите таблицу:</Label>
        <Menu Width="Auto" Height="Auto">
            <MenuItem Header="Товары" Click="Productsshow_click"></MenuItem>
            <MenuItem Header="Производители" Click="Manufacturersshow_click"></MenuItem>
            <MenuItem Header="Сотрудники" Click="Employeersshow_click"></MenuItem>
            <MenuItem Header="Клиенты" Click="Clientsshow_click"></MenuItem>
            <MenuItem Header="Склады" Click="Clientsshow_click"></MenuItem>
            <MenuItem Header="Заказы" Click="Ordersshow_click"></MenuItem>
        </Menu>
        <Label HorizontalAlignment="Center" Margin="100" FontSize="50" FontFamily="Calibri" FontWeight="Bold" Foreground="White" Background="Black">БД "Автозапчасти"</Label>
    </StackPanel>
</Window>
